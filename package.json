{
  "name": "tap-link-fe",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev-debugger": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "lint": "eslint --fix --ext .js,.ts,.tsx --ignore-path .gitignore",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "check-types": "tsc --project tsconfig.json --pretty --noEmit",
    "check-format": "npm run prettier -- --list-different",
    "validate-and-build": "npm-run-all --parallel check-types check-format lint build",
    "validate": "npm-run-all --parallel check-types check-format && lint-staged"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^2.5.2",
    "@reduxjs/toolkit": "^1.9.5",
    "accept-language": "^3.0.18",
    "axios": "^1.4.0",
    "clsx": "^1.2.1",
    "i18next": "^23.7.6",
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-resources-to-backend": "^1.2.0",
    "next": "14.0.0",
    "next-auth": "^4.24.5",
    "nprogress": "^0.2.0",
    "react": "^18",
    "react-cookie": "^6.1.1",
    "react-dom": "^18",
    "react-easy-crop": "^5.0.2",
    "react-hook-form": "^7.43.9",
    "react-i18next": "^13.5.0",
    "react-otp-input": "^3.1.0",
    "react-redux": "^8.0.5",
    "react-toastify": "^9.1.3",
    "tailwind-merge": "^1.12.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "autoprefixer": "^10",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8",
    "postcss-loader": "^7.2.4",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "tailwindcss": "^3",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "yarn lint"
    ]
  }
}
